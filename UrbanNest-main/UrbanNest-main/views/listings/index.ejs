<% layout("/layouts/boilerplate") -%>

<style>
    .filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        margin-top: 1rem ;
        margin-right: 2rem;
        text-align: center;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter p{
        font-size: 0.9rem;
    }
    .filter a{
        text-decoration: none;
        color: black;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        height: 3.5rem;
        margin-left: 10rem;
    }
    .tax-info{
        display: none;
    }
    
</style>

<body>
    <div class="filters">
        <div class="filter">
            <a href="/listings">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>All Places</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Beachfront">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach front</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Rooms">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Mansion">
                <div><i class="fa-solid fa-house"></i></div>
                <p>Mansion</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/MountainCity">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Mountain City</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Castle">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castle</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Pool">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Pool</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Camping">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Farms">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p>Farms</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Arctic">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p>Arctic</p>
            </a>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (let listing of allListings) { %> 
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card listing-card">
                    <div class="card-img-overlay"></div>
                    <img class="card-img-top" src="<%= listing.image.url %>" alt="listing_image" style="height:20rem">
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.name %></b> <br>
                            <%= listing.price ? `â‚¹ ${listing.price.toLocaleString("en-IN")}` : 'Price not available' %> / night
                            <i class="tax-info">&nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>

<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline";
            }
            else info.style.display = "none";
        }
    });
</script>
